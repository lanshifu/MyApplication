<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_content_parent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    
    <ImageView
        android:id="@+id/dialog_content_messages_icon"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_6x"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <!-- 提示内容 -->
    <TextView
        android:id="@+id/dialog_content_messages"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#3d3d3e"
        android:layout_marginTop="@dimen/spacing_6x"
        android:layout_marginBottom="@dimen/spacing_6x"
        android:layout_marginLeft="@dimen/spacing_6x"
        android:layout_marginRight="@dimen/spacing_6x"
        android:lineSpacingExtra="@dimen/spacing_2x"
        android:textSize="@dimen/meta_text_size_medium" 
        android:visibility="gone"/>
    
    <!-- 自定义布局 -->

    <LinearLayout
        android:id="@+id/dialog_content_msgll"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/spacing_6x"
        android:layout_marginRight="@dimen/spacing_6x"
        android:layout_marginTop="@dimen/spacing_6x"
        android:layout_marginBottom="@dimen/spacing_6x"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical" >
        <TextView
	        android:id="@+id/dialog_content_main_msg"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left|center_horizontal"
	        android:gravity="left"
	        android:textColor="#3d3d3e"
	        android:lineSpacingExtra="@dimen/spacing_2x"
	        android:textSize="@dimen/meta_text_size_medium" />
        <TextView
	        android:id="@+id/dialog_content_aid_msg"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left|center_horizontal"
	        android:gravity="left"
	        android:textColor="#949496"
	        android:maxLines="3"
	        android:lineSpacingExtra="@dimen/spacing_2x"
	        android:textSize="@dimen/meta_text_size_small" />
    </LinearLayout>

    <!-- 自定义布局 -->

    <LinearLayout
        android:id="@+id/dialog_content_ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/spacing_4x"
        android:layout_marginRight="@dimen/spacing_4x"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <!-- 列表 -->

    <ListView
        android:id="@+id/dialog_content_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/spacing_4x"
        android:layout_marginRight="@dimen/spacing_4x"
        android:background="@color/transparent"
        android:cacheColorHint="@color/transparent"
        android:divider="@mipmap/dialog_line_h"
        android:fadingEdge="none"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="@color/transparent"
        android:scrollbars="none"
        android:visibility="gone" />

</LinearLayout>